<%# app/views/bookings/new.html.erb %>
<div class="max-w-4xl w-full mx-auto">
  <h1 class="text-3xl font-bold mb-8">New Booking</h1>

  <div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Flight Information</h2>
    <div class="space-y-2">
      <p class="flex justify-between">
        <span class="font-medium">From:</span>
        <span><%= @flight.departure_airport.code %></span>
      </p>
      <p class="flex justify-between">
        <span class="font-medium">To:</span>
        <span><%= @flight.arrival_airport.code %></span>
      </p>
      <p class="flex justify-between">
        <span class="font-medium">Date:</span>
        <span><%= @flight.start_datetime.strftime('%B %d, %Y at %I:%M %p') %></span>
      </p>
      <p class="flex justify-between">
        <span class="font-medium">Duration:</span>
        <span><%= @flight.duration / 3600 %> hours</span>
      </p>
    </div>
  </div>

  <%= form_with(model: @booking, local: true, class: "space-y-6", data: { controller: "passengers" }) do |f| %>
    <%= f.hidden_field :flight_id, value: @flight.id %>

    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">Passenger Information</h2>
        <button type="button" 
                data-action="passengers#add"
                data-passengers-target="addButton"
                class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">
          Add Passenger
        </button>
      </div>

      <div data-passengers-target="fields" class="space-y-4">
        <%= f.fields_for :passengers do |passenger_form| %>
          <%= render 'passenger_fields', form: passenger_form %>
        <% end %>
      </div>

      <%# Template for new passenger fields - moved inside the form block %>
      <%# Part of your new.html.erb %>
      <template data-passengers-target="template">
        <div data-passengers-target="fields">
          <%= f.fields_for :passengers, Passenger.new, child_index: '_index_' do |passenger_form| %>
            <div class="bg-white rounded-lg border border-gray-200 p-6">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-semibold text-gray-800" data-passengers-target="numberLabel">
                  Passenger
                </h3>
                <button type="button" 
                        data-action="passengers#remove" 
                        class="px-3 py-1 bg-red-500 text-white text-sm rounded-md hover:bg-red-600 transition-colors">
                  Remove
                </button>
              </div>

              <div class="space-y-4">
                <div>
                  <%= passenger_form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= passenger_form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                </div>

                <div>
                  <%= passenger_form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= passenger_form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </template>

      <div class="mt-6 flex justify-end">
        <%= f.submit "Create Booking", class: "px-6 py-2 bg-blue-500 hover:bg-blue-700 text-white font-semibold rounded-md transition-colors" %>
      </div>
    </div>
  <% end %>
</div>
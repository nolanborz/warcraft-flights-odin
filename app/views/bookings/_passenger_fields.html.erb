<%# app/views/bookings/_passenger_fields.html.erb %>
<div class="border rounded p-4 mb-4">
  <div class="flex justify-end">
    <button type="button" 
            data-action="passengers#remove" 
            class="text-red-500 hover:text-red-700">
      Remove
    </button>
  </div>

  <div class="space-y-4">
    <div>
      <%= form.label :name %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= form.label :email %>
      <%= form.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
  </div>
</div>